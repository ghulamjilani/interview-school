<p id="notice"><%= notice %></p>

<h1>Schedule</h1>

<table>
  <thead>
  <tr>
    <th>Teacher</th>
    <th>Classroom</th>
    <th>Time Slot</th>
    <th>Days</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @section_student.each do |section_student| %>
    <tr>
      <td><%= section_student.teacher_full_name %></td>
      <td><%= section_student.classroom_name %></td>
      <td><%= time_slot(section_student.section) %></td>
      <td><%= section_student.section_days_group %></td>

      <td><%= link_to 'Show', schedule_path(section_student) %></td>
      <td><%= link_to 'Edit', edit_schedule_path(section_student) %></td>
      <td><%= link_to 'Destroy', "/schedules/#{section_student.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Section', new_schedule_path %>